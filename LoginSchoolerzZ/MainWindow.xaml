<Window x:Class="LoginSchoolerzZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginSchoolerzZ"
        mc:Ignorable="d"
        Title="MainWindow" Width="{Binding Width, Mode=TwoWay}" Height="{Binding Height, Mode=TwoWay}">
    <Grid>
        <!--Los grids-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Background-->
        <StackPanel x:Name="Fondo" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5" >
                    <GradientStop Color="#FFDDB166" Offset="0.4"/>
                    <GradientStop Color="#FFD68A46" Offset="0.2"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Image Height="100" Stretch="Fill" Source="/main_logo.jpg" Width="564"/>
        </StackPanel>
        
        <!--Nombre empresa-->
        <StackPanel x:Name="BrandNameContainer"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Media/Images/brand.png"/>
        </StackPanel>
        
        <!--Logotipo empresa-->
        <StackPanel x:Name="BrandLogoContainer" Grid.Row="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Media/Images/main_logo.png" />
        </StackPanel>
        
        <!--Redes sociales-->
        <StackPanel x:Name="BrandSocialMediaContainer" Grid.Row="2"
                    HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Media/Images/icons8-twitter-240.png" Height="30" Width="30"/>
                    <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="10,0,10,0">
                        <TextBlock Text="@SchoolerzZ" 
                                   Style="{StaticResource MiTextBlock}" 
                                   TextDecorations="Underline" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Image Source="/Media/Images/icons8-instagram-240.png" Height="30 "/>
                    <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="10,0,10,0">
                        <TextBlock Text="@SchoolerzZ"
                                   Style="{StaticResource MiTextBlock}" 
                                   TextDecorations="Underline" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Image Source="/Media/Images/icons8-facebook-240.png" Height="30"/>
                    <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                        <TextBlock Text="@SchoolerzZ"
                                   Style="{StaticResource MiTextBlock}"
                                   TextDecorations="Underline" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--TitleContainer-->
        <StackPanel x:Name="TitleContainer" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,30,0,0"
                    Visibility="Collapsed">
            <TextBlock x:Name="tb_title_current_view1"
                       Text="Bienvenido a "
                       FontSize="30" 
                       Style="{StaticResource MiTextBlock}"
                       TextWrapping="NoWrap" MaxWidth="250" TextAlignment="Center"/>
            <TextBlock x:Name="tb_title_current_view2"
                       Text="SchoolerzZ"
                       FontSize="55" 
                       Style="{StaticResource MiTextBlock}"
                       TextWrapping="NoWrap"/>
        </StackPanel>

        <!--StartContainer-->
        <StackPanel x:Name="StartContainer"
                    Grid.Row="1" Grid.Column="1"
                    Grid.ColumnSpan="2" Grid.RowSpan="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Visibility="Visible">

            <StackPanel x:Name="ButtonOpenContainer">

                <Button x:Name="BottonOpenLogin"
                        Template="{StaticResource CTMiBottonAnimado}"
                        Style="{StaticResource MiBottonEspecial}"
                        Content="Login"
                        Click="EnterLogin"
                        Width="300" Height="80" 
                        FontSize="40"/>

                <StackPanel x:Name="BottonOpenInfoContainer"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Margin="0,30,0,0"
                                Orientation="Horizontal">

                    <Button x:Name="ButtonDesarrolladores"
                                Template="{StaticResource CTMiBottonAnimado}"
                                Style="{StaticResource MiBottonStandard}"
                                FontSize="13"
                                Content="Desarrolladores"
                                Margin="0,0,15,0"
                                Width="125" Height="30" Click="ButtonDesarrolladores_Click"/>

                    <Button x:Name="ButtonSobreNosotros"
                                Template="{StaticResource CTMiBottonAnimado}"
                                Style="{StaticResource MiBottonStandard}"
                                FontSize="13"
                                Content="Sobre nosotros..."
                                Margin="15,0,0,0"
                                Width="125" Height="30" 
                                Click="ButtonSobreNosotros_Click"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>

        <!--InputContainer-->
        <StackPanel x:Name="InputContainer" Grid.Row="1" Grid.Column="1" Visibility="Collapsed"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Usuario"
                       Style="{StaticResource MiTextBlock}"
                       Width="200" Height="30" 
                       FontSize="25" 
                       TextAlignment="Center" 
                       FontWeight="DemiBold"/>
            <TextBox x:Name="UserInput"
                     Style="{StaticResource MiTextBox}"
                     Width="250" Height="30"
                     TextWrapping="NoWrap"/>
            <TextBlock Text="Contraseña"
                       Style="{StaticResource MiTextBlock}"
                       Width="250" Height="30"
                       FontSize="25" TextAlignment="Center" 
                       FontWeight="DemiBold" 
                       Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordInput"
                         Style="{StaticResource MiPasswordBox}"
                         Width="250" Height="30"/>

            <CheckBox x:Name="RemembermeCheckbox"
                      Style="{StaticResource MiCheckBox}"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Content="Recuérdame" 
                      Margin="0,10,0,0"/>
        </StackPanel>

        <!--UserTypeContainer-->
        <StackPanel x:Name="UserTypeContainer" Grid.Column="1" Grid.Row="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <TextBlock  Text="Elige tu tipo de usuario"
                        Style="{StaticResource MiTextBlock}"
                        FontSize="25" FontWeight="DemiBold"
                        TextWrapping="NoWrap" Margin="0,0,0,20"/>
            <ComboBox Name="ComboboxUserType"
                      Style="{StaticResource MiComboBox}"
                      VerticalAlignment="Center">
                <ComboBoxItem Content="Alumno" x:Name="ComboItemUserTypeStudent" FontSize="20"/>
                <ComboBoxItem Content="Padre" x:Name="ComboItemUserTypeParent" FontSize="20"/>
                <ComboBoxItem Content="Profesor" x:Name="ComboItemUserTypeTeacher" FontSize="20"/>
                <ComboBoxItem Content="Administrador" x:Name="ComboItemUserTypeSchoolManager" FontSize="20"/>
            </ComboBox>

        </StackPanel>

        <!--ButtonNextContainer-->
        <StackPanel x:Name="ButtonNextContainer" Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Button x:Name="ButtonUserTypeSet"
                    Template="{StaticResource CTMiBottonAnimado}"
                    Style="{StaticResource MiBottonStandard}"
                    FontSize="20" 
                    Content="Siguiente" 
                    Click="UserTypeSet" 
                    VerticalAlignment="Center"
                    Width="175" Height="50"/>

        </StackPanel>

        <!--ButtonLoginBackContainer-->
        <StackPanel x:Name="ButtonLoginBackContainer" 
                    Grid.Row="2" Grid.Column="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <Button Template="{StaticResource CTMiBottonAnimado}"
                    Style="{StaticResource MiBottonStandard}"
                    FontSize="20"
                    Content="Atrás" 
                    Click="Back" 
                    Width="175" Height="50"/>

            <Button Template="{StaticResource CTMiBottonAnimado}"
                    Style="{StaticResource MiBottonStandard}"
                    FontSize="20"
                    Content="Entrar" 
                    Click="MakeLogin" 
                    Width="175" Height="50"
                    Margin="50,0,0,0"/>
        </StackPanel>

        <!--OptionsContainer-->
        <StackPanel x:Name="OptionsContainer" Grid.Row="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <Button Template="{StaticResource CTMiBotton}"
                    Style="{StaticResource MiBottonStandard}" 
                    Content="RESOLUCIÓN"
                    Width="180" Height="40" 
                    Click="ImageOptionClick" />
            <Button Template="{StaticResource CTMiBotton}"
                    Style="{StaticResource MiBottonStandard}"
                    Content="SONIDO"
                    Width="180" Height="40" 
                    Click="SoundOptionClick"/>
        </StackPanel>

        <!--ResolutionsContainer-->
        <StackPanel x:Name="ResolutionsContainer" 
                    Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="Collapsed">
            
            <StackPanel Margin="0,0,0,30">
                <RadioButton x:Name="r600x400" Content="600x400" 
                             Style="{StaticResource MiRadioButton}"/>
                <RadioButton x:Name="r800x600" Content="800x600"
                             Style="{StaticResource MiRadioButton}"/>
                <RadioButton x:Name="r1000x650" Content="1000x650"
                             Style="{StaticResource MiRadioButton}"/>
                <RadioButton x:Name="r1600x1050" Content="1600x1050"
                             Style="{StaticResource MiRadioButton}"/>
                <RadioButton x:Name="r1920x1080" Content="1920x1080"
                             Style="{StaticResource MiRadioButton}"/>
            </StackPanel>

            <Button Template="{StaticResource CTMiBottonAnimado}"
                    Style="{StaticResource MiBottonEspecial}"
                    Content="Confirmar" 
                    Click="ConfirmResolutionButton"
                    Margin="0,50,0,0" Height="50"/>
        </StackPanel>

        <!--TitleResolution-->
        <StackPanel x:Name="TitleResolution"
                    Grid.Column="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,30,0,0"
                    Visibility="Collapsed">
            <TextBlock Text="Resolución"
                       FontSize="55"
                       Style="{StaticResource MiTextBlock}"/>
        </StackPanel>

        <!--TitleSound-->
        <StackPanel x:Name="TitleSound"
                    Grid.Column="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,30,0,0"
                    Visibility="Collapsed">
            <TextBlock Text="Sonido"
                       FontSize="55"
                       Style="{StaticResource MiTextBlock}"/>
        </StackPanel>

        <!--OptionSoundContainer-->
        <StackPanel x:Name="OptionSoundContainer" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                    VerticalAlignment="Center" Margin="0,0,0,100"
                    Visibility="Collapsed">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Template="{StaticResource CTMiBotton}"
                        Style="{StaticResource MiBottonImagen}"
                        Width="40" Height="40" 
                        VerticalAlignment="Bottom" 
                        Name="MuteSoundButton" 
                        Click="MuteSound" >
                    <Button.Background>
                        <ImageBrush ImageSource="Media/Images/MuteSound_icon.png"/>
                    </Button.Background>
                </Button>
                
                <Slider Value="{Binding Volume, Mode=TwoWay}" 
                        HorizontalAlignment="Center"
                        Minimum="0" Maximum="10"
                        Width="450" 
                        Margin="20,10,20,0" TickFrequency="0.1" />
                
                <Button Template="{StaticResource CTMiBotton}"
                        Style="{StaticResource MiBottonImagen}"
                        Width="40" Height="40" 
                        VerticalAlignment="Bottom" 
                        Name="MaxSoundButton" 
                        Click="MaxSound">
                    <Button.Background>
                        <ImageBrush ImageSource="Media/Images/MaxSound_icon.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,50,0,0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Sound1"
                            Template="{StaticResource CTMiBottonAnimado}"
                            Style="{StaticResource MiBottonStandard}"
                            Content="Efecto 1" 
                            Margin="10,0,10,10" 
                            Width="150" Height="50" 
                            Click="SoundOne"/>
                    <Button x:Name="Sound2"
                            Template="{StaticResource CTMiBottonAnimado}"
                            Style="{StaticResource MiBottonStandard}"
                            Content="Efecto 2" 
                            Margin="10,0,10,10" 
                            Width="150" Height="50" 
                            Click="SoundTwo"/>
                    <Button x:Name="Sound3"
                            Template="{StaticResource CTMiBottonAnimado}"
                            Style="{StaticResource MiBottonStandard}"
                            Content="Efecto 3" 
                            Margin="10,0,10,10" 
                            Width="150" Height="50" 
                            Click="SoundThree" />
                </StackPanel>
                <StackPanel x:Name="SoundsContainer" Orientation="Horizontal" HorizontalAlignment="Center" Width="480">
                    <RadioButton x:Name="SFX1" Tag="1" HorizontalAlignment="Center" Margin="60,0,0,0"/>
                    <RadioButton x:Name="SFX2" Tag="2" HorizontalAlignment="Center" Margin="160,0,0,0"/>
                    <RadioButton x:Name="SFX3" Tag="3" HorizontalAlignment="Center" Margin="150,0,0,0"/>
                </StackPanel>
                
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Template="{StaticResource CTMiBottonAnimado}"
                        Style="{StaticResource MiBottonEspecial}" 
                        Content="Confirmar"
                        Click="ConfirmSoundButton"
                        Margin="0,50,0,0"
                        Height="50"/>
            </StackPanel>
        </StackPanel>

        <!--CreditosContainer-->
        <StackPanel x:Name="CreditosContainer"
                    Grid.Row="1" Grid.Column="1"
                    Grid.ColumnSpan="2" Grid.RowSpan="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Visibility="Collapsed">
            <StackPanel>
                <TextBlock Style="{StaticResource MiTextBlock}"
                           Text="Desarrollado por :"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="45"
                           TextWrapping="NoWrap" 
                           Margin="0,0,0,50"/>
                <StackPanel>
                    <TextBlock Style="{StaticResource MiTextBlockAnimado}"
                               Text="Óscar Vicente Melgarejo"
                               FontSize="30"
                               TextWrapping="NoWrap" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Style="{StaticResource MiTextBlockAnimado}"
                               Text="Alejandro Velasco"
                               FontSize="30"
                               TextWrapping="NoWrap" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
               
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Width="100" Height="100" 
                            HorizontalAlignment="Left" 
                            Margin="0,0,150,0">
                    <Image Source="/Media/Images/main_logo_reversed.png"
                           Style="{StaticResource MiImageRotativa2}"/>
                </StackPanel>

                <StackPanel Width="100" Height="100" 
                            Margin="150,0,0,0">
                    <Image Source="/Media/Images/main_logo.png"
                           Style="{StaticResource MiImageRotativa1}"/>
                </StackPanel>
            </StackPanel>

            <Button x:Name="ButtonVolverCreditos"
                    Template="{StaticResource CTMiBottonAnimado}"
                    Style="{StaticResource MiBottonStandard}" 
                    Content="Volver"
                    Width="130" Height="30" 
                    Margin="0,50,0,0" 
                    Click="ButtonVolverCreditos_Click"/>

        </StackPanel>

        <!--SobreNosotrosContainer-->
        <StackPanel x:Name="SobreNosotrosContainer"
                    Grid.Row="0" Grid.Column="1"
                    Grid.RowSpan="3"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="350" Height="450" 
                        Background="#FFF0F0C8">

                <Button x:Name="ButtonSobreNosotrosCerrar"
                        Template="{StaticResource CTMiBotton}"
                        Style="{StaticResource MiBottonCerrar}"
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" 
                        Margin="0,2,2,0" 
                        Click="ButtonSobreNosotrosCerrar_Click"/>
                
                <StackPanel Width="250">
                    <Image Source="/Media/Images/brand.png"/>
                </StackPanel>
                
                <StackPanel Width="300" Height="200" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            >
                    <TextBlock Text="ScoolerzZ es una empresa dedicada al desarrollo 
                               software educativo, comprometida con una enseñanza 
                               adecuada para las nuevas generaciones y apuntando hacia 
                               un futuro que evolucione la docencia en algo 
                               completamente distinto"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               TextWrapping="Wrap" 
                               FontFamily="Global Serif" 
                               FontSize="20" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--MainPageContainer-->
        <StackPanel x:Name="MainPageContainer"
                    Grid.Row="0" Grid.Column="1"
                    Grid.RowSpan="3"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <StackPanel Width="550" Height="450" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                       Text="WORK IN"
                       FontSize="50" 
                       Style="{StaticResource MiTextBlock}"
                       TextAlignment="Center"/>
                <TextBlock
                       Text="PROGRESS"
                       FontSize="70" 
                       Style="{StaticResource MiTextBlock}"
                       TextAlignment="Center"/>
                <StackPanel  Width="250" Margin="0,30,0,0">
                    <Image Source="/Media/Images/icono-work.png"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--ButtonPantallaOpciones-->
        <Button x:Name="ButtonPantallaOpciones"
                Template="{StaticResource CTMiBotton}"
                Style="{StaticResource MiBottonImagen}"
                Grid.Row="2" Grid.Column="1"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,10,10"
                Width="50" Height="50"
                Click="OpenOptionsButton">
            <Button.Background>
                <ImageBrush ImageSource="/Media/Images/icono-opciones.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
